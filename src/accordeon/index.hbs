---
parent-id: ''
list:
  'Entry 1': '#entry-1'
  'Entry 2': '#entry-2'
  'Entry 3':
    'Entry 1.1': '#entry-1-1'
    'Entry 1.2': '#entry-1-2'
    'Entry 1.3': '#entry-1-3'
  'Entry 4':
    'Entry 4.1': '#entry-4-1'
    'Entry 4.2': '#entry-4-2'
    'Entry 4.3':
      'Entry 4.3.1': '#entry-4-3-1'
      'Entry 4.3.2': '#entry-4-3-2'
      'Entry 4.3.3': '#entry-4-3-3'
---
<div class="pkg controller" data-pkg="agency-pkg-docs/accordeon" data-controller="agency-pkg-docs/accordeon">

  <div>
    {{#if list.length}}
      {{#if url}}
        <a class="name internal" href="{{{url}}}" title="{{{name}}}">{{{name}}}</a>
      {{else}}
        <span class="name">{{{name}}}</span>
      {{/if}}
      <span class="toggle js-click-accordeon-toggle"></span>
    {{else}}
      <a class="name internal" href="{{{url}}}" title="{{{name}}}">{{{name}}}</a>
    {{/if}}
    {{#if url}}
      <a class="external" href="{{{url}}}" target="_blank">ext.</a>
    {{/if}}
  </div>

  {{#if list.length}}
    <div class="content">
    {{#each list}}
      {{{mixin "agency-pkg-docs/accordeon" this parent-id=path}}}
    {{/each}}
    </div>
  {{/if}}

</div>
