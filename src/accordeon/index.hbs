---
parent-id: ''
list:
  'Entry 1': '#entry-1'
  'Entry 2': '#entry-2'
  'Entry 3':
    'Entry 1.1': '#entry-1-1'
    'Entry 1.2': '#entry-1-2'
    'Entry 1.3': '#entry-1-3'
  'Entry 4':
    'Entry 4.1': '#entry-4-1'
    'Entry 4.2': '#entry-4-2'
    'Entry 4.3':
      'Entry 4.3.1': '#entry-4-3-1'
      'Entry 4.3.2': '#entry-4-3-2'
      'Entry 4.3.3': '#entry-4-3-3'
---
<ul class="pkg" data-pkg="agency-pkg-docs/accordeon">
  {{#each this.list}}
    <li>
      {{#if this.list.length}}
        <input type="checkbox" id="{{{../parent-id}}} - {{this.path}}"/>
        {{{mixin "agency-pkg-docs/accordeon/label" id=path title=name parent-id=../parent-id}}}
        {{{mixin "agency-pkg-docs/accordeon" this parent-id=path}}}
      {{else}}
      {{{mixin "agency-pkg-docs/accordeon/menu" url=url title=name}}}
      {{{mixin "agency-pkg-docs/accordeon/external" url=url}}}
      {{/if}}
    </li>
  {{/each}}
</ul>
