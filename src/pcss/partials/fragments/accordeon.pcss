[data-partial="fragments/accordeon"] {
  list-style-type: none;
  margin: 0;
  padding: 0;
  input:checked+ .partial[data-package="agency-pkg-docs"][data-partial="elements/accordeon/label"] {
    @extend .partial[data-package="agency-pkg-docs"][data-partial="elements/accordeon/label"].selected;
    &:after {
      @extend .partial[data-package="agency-pkg-docs"][data-partial="elements/accordeon/label"].selected:after;
    }
  }
  ul {
    height: 0;
    >* {
      transition-property: opacity;
      transition-duration: 0.35s;
      transition-delay: 0s;
      opacity: 0;
    }
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.05);
    border-bottom: none;
  }
  li {
    position: relative;
    input {
      display: none;
      &:checked+ label {
        &+ ul {
          height: auto;
          >* {
            opacity: 1;
            transition-duration: 0.35s;
            transition-delay: 0.2s;
          }
        }
      }
    }
  }
}
