[data-partial="fragments/accordeon"] {
  list-style-type: none;
  margin: 0;
  padding: 0;
  /*border-top: 1px solid black;
  border-bottom: 1px solid black;*/
  ul {
    max-height: 0;
    overflow: hidden;
    transition-property: max-height;
    transition-duration: 0.35s;
    background-color: rgba(200, 200, 200, 0.15);
    border-top: 1px solid transparent;


    border-bottom: none;
  }
  li {
    position: relative;
    /*margin-left: 2em;*/
    input {
      display: none;
      &:checked+ label {
        &+ ul {
          max-height: 200px;
          /*border-top: 1px solid black;*/
        }
      }
    }
    a {
    border-left: calc(4 / 16)em solid rgba(0, 0, 0, 0.1);
      position: relative;
      display: block;
      color: black;
      &:before {
        content: 'â€¢';
        position: absolute;
        top: 0;
        left: 0;
        margin-top: 2px;
        display: inline-block;
        margin-left: -1em;
        width: 1em;
        text-align: center;
        transition-duration: 0.35s;
        transition-timing-function: cubic-bezier(.47, .01, .5, 1.5);
      }
      &:hover {
        color: red;
        text-decoration: underline;
      }
    }
  }
}
